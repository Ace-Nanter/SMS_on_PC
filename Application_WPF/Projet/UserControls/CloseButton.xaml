<UserControl x:Class="Projet.UserControls.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Height="20" Width="20">
            <TextBlock TextWrapping="Wrap">
                <Hyperlink Style="{StaticResource ApplicationHoverButton}" Click="CloseButton_Click">X</Hyperlink>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
