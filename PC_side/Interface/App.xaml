<Application x:Class="Interface.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Interface"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Hyperlink}" x:Key="ApplicationHoverButton">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <SolidColorBrush x:Key="ApplicationBackgroundColor"  Color="#FF1B1A1A" />
        <SolidColorBrush x:Key="ApplicationBorderColor"  Color="#FF3A3939" />
        <SolidColorBrush x:Key="ApplicationButtonColor"  Color="#FF2C2B2B" />
        <SolidColorBrush x:Key="ApplicationTextColor"  Color="White" />
    </Application.Resources>
</Application>
